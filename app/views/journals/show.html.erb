<h1>
  <%= @journal.title %>
</h1>
<br/>
<div class="container">

  <% if @journal.posts.count != 0 %>
    <% @journal.posts.each do |post| %>
      <div class="card">
        <%= post.title %> || 
        <%= post.created_at %> || 
        <%= post.rating %> <br/>
        <p>
          <%= post.content %>
        </p>
      </div>
    <% end %>
  <% else %>
    <p><strong> It looks like you haven't written any entries yet! </strong></p>
  <% end %>
  <%= link_to 'New post', new_journal_post_path(@journal), :class => 'btn'%>
</div>


<%= link_to 'Edit', edit_journal_path(@journal) %> |
<%= link_to 'Back', journals_path %>