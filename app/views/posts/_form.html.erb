<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :journal_id, value: current_user.journal.id %>

  <div class="field">
    <%= form.label :title %>
    <br/>
    <%= form.text_field :title %>
  </div>

  <div class="field rating">
    <%= form.label :rating, "How would you rate your day?" %>
    <br/>
    <table>
      <thead>
        <tr class="rating-headings">
          <th><%= form.label :rating, '1', value: '1' %></th>
          <th><%= form.label :rating, '2', value: '2' %></th>
          <th><%= form.label :rating, '3', value: '3' %></th>
          <th><%= form.label :rating, '4', value: '4' %></th>
          <th><%= form.label :rating, '5', value: '5' %></th>
        </tr>
      </thead>
    
      <tbody>
        <tr>
          <td><%= form.radio_button :rating, '1' %></td>
          <td><%= form.radio_button :rating, '2' %></td>
          <td><%= form.radio_button :rating, '3' %></td>
          <td><%= form.radio_button :rating, '4' %></td>
          <td><%= form.radio_button :rating, '5' %></td>
        </tr>
      </tbody>
    </table>

    
  </div>

  <div class="field">
    <%= form.label :content %>
    <br/>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :keywords %>
    <em>(if multiple, seperate with commas, ie "work, school")</em>
    <br/>
    <%= form.text_field :keywords %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
